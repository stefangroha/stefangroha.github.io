# Security Configuration
# Disable directory browsing
Options -Indexes

# Deny access to sensitive files
<Files "*.md">
    Order allow,deny
    Deny from all
</Files>

<Files "*.json">
    Order allow,deny
    Deny from all
    # Allow access to posts-index.json for blog functionality
    <Files "posts-index.json">
        Order deny,allow
        Allow from all
    </Files>
</Files>

<Files "*.js">
    Order allow,deny
    Deny from all
    # Allow access to specific JS files needed for functionality
    <Files "blog.js">
        Order deny,allow
        Allow from all
    </Files>
    <Files "scripts.js">
        Order deny,allow
        Allow from all
    </Files>
</Files>

# Deny access to config files
<Files "config.js">
    Order allow,deny
    Deny from all
</Files>

<Files "generate-posts-index.js">
    Order allow,deny
    Deny from all
</Files>

# Security headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always append X-Frame-Options SAMEORIGIN
    
    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options nosniff
    
    # Enable XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Referrer policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (basic)
    Header always set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' https://use.fontawesome.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://cdn.jsdelivr.net https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:; connect-src 'self'"
</IfModule>

# Prevent access to hidden files
<Files ".*">
    Order allow,deny
    Deny from all
</Files>

# Error pages (optional - customize as needed)
ErrorDocument 403 /index.html
ErrorDocument 404 /index.html